{% extends 'base.html.twig' %} {% block title %}Kategorie film√≥w{% endblock %} {% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    Ilosc kategori: {{categories | length}}
    <br>
    <ul>
        {% for category in categories %}
        <li>
            <p>
                <a href="category/{{category.getId}}">{{ category }}</a>
                {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-danger btn-sm float-right" href="/remove/category/{{ category.getId }}">
                    Usun</a>
                {% endif %}
            </p>
        </li>
        {% else %} Brak kategorii. {% endfor %}
    </ul>
</div>
{% endblock %}